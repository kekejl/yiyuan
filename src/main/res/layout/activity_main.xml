<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




   <FrameLayout
       android:id="@+id/view_content"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1" />

   <!--<com.aurelhubert.ahbottomnavigation.AHBottomNavigation-->
       <!--android:id="@+id/bottom_navigation"-->
       <!--android:layout_width="match_parent"-->
       <!--android:layout_height="wrap_content" />-->
   <View

       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/home_divider"
       />
   <LinearLayout
       android:layout_gravity="bottom"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white" >

      <RelativeLayout
          android:id="@+id/rl_home"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_home"
                android:padding="2dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_home"
                />

            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="首页"

                android:textColor="#3F3F3F" />
         </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rl_channel"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_channel"
                android:padding="2dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_channel"
                />

            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="频道"
                android:textColor="#3F3F3F" />
         </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rl_commune"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_commune"
                android:padding="2dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_commune"
                />

            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_commune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="公社"
                android:textColor="#3F3F3F" />
         </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rl_my"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_my"
                android:padding="2dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_my"
                />

            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我的"
                android:textColor="#3F3F3F" />
         </LinearLayout>
      </RelativeLayout>
   </LinearLayout>

</LinearLayout>
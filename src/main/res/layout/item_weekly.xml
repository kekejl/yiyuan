<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selecter"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/rlTimeline"
        android:layout_width="32dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTopLine"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tvTopLine"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_dot" />

        <TextView
            android:id="@+id/tvBottomLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tvDot"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/tv_weekly_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:id="@+id/tv_weekly_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:id="@+id/tv_weekly_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="12dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View
            android:background="@color/home_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
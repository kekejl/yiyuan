<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selecter"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:contentPadding="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="15dp"
    >

    <LinearLayout
        android:id="@+id/ll_myorder"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_myorder_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="365会员"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_myorder_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易成功"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tv_myorder_dingdan_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="@color/black" />
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tv_myorder_dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="@color/black" />

            <TextView

                android:layout_marginTop="3dp"
                android:id="@+id/tv_myorder_danjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价"
                android:textColor="@color/black" />
           <LinearLayout
               android:layout_marginTop="3dp"

               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_myorder_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginTop="3dp"

                android:id="@+id/tv_myorder_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计：365"
                android:textColor="@color/black" />
            <TextView
                android:layout_marginTop="3dp"

                android:id="@+id/tv_myorder_sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买时间"
                android:textColor="@color/black" />
            </LinearLayout>
               <LinearLayout
                   android:id="@+id/ll_order_yanbao"
                   android:layout_gravity="bottom"
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:background="@drawable/textview_bg"
                       android:id="@+id/tv_order_tuidan"
                       android:layout_marginRight="5dp"
                       android:paddingTop="5dp"
                       android:paddingBottom="5dp"
                       android:paddingRight="10dp"
                       android:paddingLeft="10dp"
                       android:textSize="12sp"
                       android:text="申请终止服务"
                       android:textColor="@color/black"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:visibility="gone"
                       android:id="@+id/tv_order_yanbao"
                       android:paddingTop="5dp"
                       android:paddingBottom="5dp"
                       android:background="@drawable/textview_bg_yanbao"
                       android:paddingRight="10dp"
                       android:paddingLeft="10dp"
                       android:textColor="@color/white"
                       android:textSize="12sp"
                       android:text="研报"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>

        </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

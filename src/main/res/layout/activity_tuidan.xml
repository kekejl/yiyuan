<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"

      android:textColor="@color/black"
      android:text="请选择您的理由"
      android:layout_marginTop="20dp"

      />
  <LinearLayout
      android:layout_marginTop="20dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:textColor="@color/black"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:text="最近很忙，没时间操作"
          android:layout_height="wrap_content" />
      <CheckBox
          android:button="@null"
          android:background="@drawable/checkbox_tuidan_selecter"
          android:id="@+id/cb_tuidan1"
          android:layout_width="20dp"
          android:layout_height="20dp" />
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:textColor="@color/black"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:text="资金有其他用途"
          android:layout_height="wrap_content" />
      <CheckBox
          android:background="@drawable/checkbox_tuidan_selecter"
          android:button="@null"

          android:id="@+id/cb_tuidan2"

          android:layout_width="20dp"
          android:layout_height="20dp" />
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:textColor="@color/black"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:text="服务质量不好"
          android:layout_height="wrap_content" />
      <CheckBox
          android:id="@+id/cb_tuidan3"
          android:background="@drawable/checkbox_tuidan_selecter"
          android:button="@null"
          android:layout_width="20dp"
          android:layout_height="20dp" />
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:textColor="@color/black"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:text="效果不理想"
          android:layout_height="wrap_content" />
      <CheckBox
          android:id="@+id/cb_tuidan4"
          android:background="@drawable/checkbox_tuidan_selecter"
          android:button="@null"
          android:layout_width="20dp"
          android:layout_height="20dp" />
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:textColor="@color/black"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:text="其他"
          android:layout_height="wrap_content" />
  </LinearLayout>
    <EditText
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/edit_tuidan"
        android:gravity="top"
        android:textSize="14sp"
        android:hint="其他理由..."
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <Button
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg"
        android:id="@+id/btn_tuidan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="提交申请" />



</LinearLayout>
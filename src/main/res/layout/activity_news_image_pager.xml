<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.yiyuaninfo.photoview.HackyViewPager
        android:id="@+id/photo_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:persistentDrawingCache="animation"/>

    <ImageView
        android:id="@+id/picture_iv_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_back"
        android:layout_width="36dp"
        android:layout_height="24dp"/>
  <LinearLayout
      android:id="@+id/ll_newsimage"
      android:layout_gravity="center_vertical|bottom|left"
      android:background="@color/tvvideo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/picture_iv_index"
        android:text="1/10"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/like"
            android:layout_marginRight="60dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_companydetail_logo"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/a1" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_companydetail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="北京首证投资顾问有限公司"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_companydetail_zj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资金量:50000万"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                </View>

                <!--<com.yiyuaninfo.view.FlowLayout-->
                <!--android:id="@+id/flowlayout_cp_tag"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="10dp" />-->
                <TextView
                    android:id="@+id/tv_finder_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/popup_corner"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="999关注 "
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>
        <com.yiyuaninfo.view.ScrollViewTabIndicator
            android:id="@+id/tab2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"

            android:textAppearance="@style/style_tab_selector"
            app:tpi_indicatorColor="@color/colorPrimary"
            app:tpi_indicatorHeight="2dp"
            app:tpi_indicatorMode="wrap_content"
            app:tpi_mode="fixed"
            app:tpi_underLineColor="#00000000" />

        <View
            android:background="@color/linecolor"
            android:layout_width="match_parent"
            android:layout_height="0.8dp">

        </View>



    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/ll_finder_gsjj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorPrimary"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="公司简介"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
              <TextView
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:textColor="@color/black"
                  android:textSize="14sp"
                  android:id="@+id/tv_finder_gsjj"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_finder_gsdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorPrimary"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="公司动态"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:id="@+id/tv_finder_gsdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_finder_cptj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorPrimary"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="产品推荐"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_finder_cp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>




        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <com.yiyuaninfo.view.ScrollViewTabIndicator
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_title"
        android:background="@android:color/white"
        android:textAppearance="@style/style_tab_selector"
        android:visibility="invisible"
        app:tpi_indicatorColor="@color/colorPrimary"
        app:tpi_indicatorHeight="3dp"
        app:tpi_indicatorMode="wrap_content"
        app:tpi_mode="fixed"
        app:tpi_underLineColor="#00000000" />


</RelativeLayout>
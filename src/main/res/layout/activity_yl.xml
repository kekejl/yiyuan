<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.yiyuaninfo.Activity.colortrackview.ColorTrackTabLayout
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:id="@+id/ColorTrackTabLayout_yl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/TextAppearanceBig"
        />
    <View
        android:background="@color/home_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_yl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white">
    </android.support.v4.view.ViewPager>
</LinearLayout>
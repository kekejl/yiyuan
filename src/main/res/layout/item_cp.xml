<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/image_cp"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/a1" />

</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cp_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京首证投资顾问有限公司"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!--<TextView-->
            <!--android:id="@+id/tv_cp_abstract"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="资金量:50000万" />-->

        <com.yiyuaninfo.view.FlowLayout
            android:visibility="gone"
            android:id="@+id/flowlayout_cp_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tv_cp_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资金量:50000万" />
            <TextView
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:background="@drawable/popup_corner_xm_tag"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_cp_state"
                android:layout_alignParentRight="true"
                android:text="在售"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
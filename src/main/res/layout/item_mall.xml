<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:background="@color/white"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    >
 <LinearLayout
     android:id="@+id/ll_jfsc_duihuan"
     android:background="@drawable/small_bg"
     android:padding="5dp"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="220dp">

 <ImageView
     android:id="@+id/iv_mall"
     android:layout_width="150dp"
     android:layout_height="150dp" />
<LinearLayout
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <TextView
      android:background="@drawable/popup_corner"
      android:id="@+id/tv_mall_tag"
      android:text="推荐"
      android:padding="2dp"
      android:textColor="@color/colorPrimary"
      android:textSize="10sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
 <TextView
     android:maxLines="2"
     android:ellipsize="end"
     android:textSize="12sp"
     android:layout_marginLeft="5dp"
     android:id="@+id/tv_mall_name"
     android:text="壹元服务专属定制抱枕"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />


</LinearLayout>
     <View
         android:layout_marginTop="1dp"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         ></View>
  <LinearLayout
      android:layout_marginTop="5dp"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
     <ImageView
         android:src="@drawable/jifen2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <TextView
         android:id="@+id/tv_mall_jifen"
         android:text="800"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>
</LinearLayout>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#ffffff"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="请选择一下方式进行反馈，谢谢!"
                android:textColor="@color/black" />
            <View
                android:background="@color/home_divider"
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"></View>

            <TextView
                android:background="@drawable/item_selecter"
                android:foreground="?attr/selectableItemBackground"

                android:id="@+id/tv_kf_qq"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="QQ交流"
                android:textColor="@color/black" />
            <View
                android:background="@color/home_divider"
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"></View>
            <TextView
                android:background="@drawable/item_selecter"
                android:foreground="?attr/selectableItemBackground"

                android:id="@+id/tv_kf_call"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="电话沟通"
                android:textColor="@color/black" />
            <View
                android:background="@color/home_divider"
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"></View>
            <TextView
                android:foreground="?attr/selectableItemBackground"

                android:background="@drawable/item_selecter"
                android:id="@+id/tv_kf_cancle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="放弃"
                android:textColor="@color/black" />
        </LinearLayout>
</android.support.v7.widget.CardView>
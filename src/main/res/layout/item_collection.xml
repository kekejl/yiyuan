<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selecter"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:background="@drawable/item_selecter"
        android:id="@+id/ll_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rlRightImg"
            android:layout_width="100dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_collection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_new_category_tip_dark" />

            <LinearLayout
                android:id="@+id/llVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/shape_rectangle_black"
                android:padding="5dp"
                android:visibility="gone"

                >

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/palyicon_video_textpage"
                    android:drawablePadding="2dp"
                    android:text="02:05"
                    android:textColor="#ffffffff"
                    android:textSize="8sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_collection_title"
                style="@style/new_title"
                android:layout_width="match_parent"
                android:text="景海鹏陈冬踏上回家之路asdasdasdasdasd"
                android:textColor="@color/black" />

            <View
                android:id="@+id/viewFill"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <LinearLayout

                android:id="@+id/llCenterImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivCenterImg1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/right_arrow_icon" />

                <ImageView
                    android:id="@+id/ivCenterImg2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/right_arrow_icon" />

                <ImageView
                    android:id="@+id/ivCenterImg3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--<TextView-->
                    <!--android:id="@+id/tv_collection_typ"-->
                    <!--style="@style/new_info_layout_text_style"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="1020评论"-->
                    <!--android:textSize="11dp" />-->

                <TextView
                    android:id="@+id/tv_collection_time"
                    style="@style/new_info_layout_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5分钟前"
                    android:textSize="11dp" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="2dp">

                </View>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/home_divider"
        android:text="删除"
        android:textColor="@color/colorPrimary" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>